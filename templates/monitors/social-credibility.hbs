<div class="flexcol anarchy-monitor">
  <label class="monitor-label">
    {{localize ANARCHY.actor.counters.social.credibility}}
    <input class="info-value"
      type="number" data-dtype="Number" min="0" max="10"
      name="data.counters.social.credibility.max"
      data-counter-social="credibility"
      value="{{data.data.counters.social.credibility.max}}"/>
  </label>
  {{> "systems/anarchy/templates/common/checkbar.hbs"
    code='credibility'
    labelkey=ANARCHY.actor.counters.social.credibility
    value=data.data.counters.social.credibility.value
    max=data.data.counters.social.credibility.max
    rowlength=5
  }}
</div>
