{{#if (and type used)}}
  {{#if (eq category 'pool')}}  
  {{#if value}}
    <div>
    {{localize (concat 'SRA.common.roll.modifiers.' type)}}:
    {{numberFormat value decimals=0 sign=true}}
    </div>
  {{/if}}
  {{/if}}
  {{#if (eq category 'reroll')}}  
  <div>
    {{localize (concat 'SRA.common.roll.modifiers.' type)}}
    {{numberFormat value decimals=0 sign=false}}
  </div>
  {{/if}}
  {{#if (eq category 'opponent')}}
    {{#if value}}
    <div>
      {{localize (concat 'SRA.common.roll.modifiers.' type)}}
      {{numberFormat value decimals=0 sign=false}}
    </div>
    {{/if}}
  {{/if}}
{{/if}}
