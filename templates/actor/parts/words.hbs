<h3 class="define-wordType" data-word-type="{{wordType}}">
  {{localize (concat 'ANARCHY.actor.words.' wordType)}}
  <a class="item-control click-word-add" title="{{localize ANARCHY.common.add}}">
    {{{iconFA 'fas fa-plus-circle'}}}
  </a>
</h3>
{{#each values as |wordEntry index|}}
<div class="define-wordType" data-word-type="{{../wordType}}" data-word-id="{{wordEntry.id}}" data-index="{{index}}">
  <span class="flexrow">
    <input class="change-word-value" type="text" data-dtype="String" value="{{wordEntry.word}}"/>
    <div class="flex-shrink-end">
      {{#if (eq ../wordType 'cues')}}
      <a class="item-control click-word-say" title="{{localize ANARCHY.common.say}}">
        {{{iconFA 'fas fa-comment-dots'}}}
      </a>
      {{!-- when adding edition for audio file, use this to edit
        <a class="item-control click-word-edit" title="{{localize ANARCHY.common.edit}}">
        {{{iconFA 'fas fa-edit'}}}
        </a>
      --}}
      {{/if}}
      <a class="item-control click-word-delete" title="{{localize ANARCHY.common.del}}">
        {{{iconFA 'fas fa-trash'}}}
      </a>
    </div>
  </span>
</div>
{{/each}}
