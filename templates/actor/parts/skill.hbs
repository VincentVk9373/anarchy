<div class="flexrow item" data-item-id="{{_id}}" data-item-type="skill">
  {{#if img}}
  <img class="sheet-item-img" src="{{img}}" alt="name"/>
  {{/if}}
  {{#if (eq data.attribute 'knowledge')}}
  <span title="{{localize 'SRA.attributes.knowledge'}}">
    <i class="fas fa-user-graduate"></i>
    <label>{{name}}</label>
  </span>
  {{else}}
    {{#if data.specialization}}
      <div class="flexcol">
    {{/if}}
    <span class="flexrow">
      <a class="skill-label">
        <label>{{name}}</label>
        <label>{{data.value}} + {{toUpperCase (substring (localize (concat 'SRA.attributes.' data.attribute)) 0 3)}}
        </label>
      </a>
    </span>
    {{#if data.specialization}}
      <span class="flexrow">
        <a class="skill-specialization-label">(
          <label>{{data.specialization}}</label>
          <label>{{sum data.value 2}} + {{toUpperCase (substring (localize (concat 'SRA.attributes.' data.attribute)) 0 3)}}</label>
        )</a>
      </span>
    </div>
    {{/if}}
  {{/if}}
  {{> 'systems/shadowrun-anarchy/templates/common/item-controls.hbs'}}
</div>
