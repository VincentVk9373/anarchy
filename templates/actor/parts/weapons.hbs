<div class="define-item-type weapon" data-item-type="weapon">
  <h2>
      <label>{{localize 'ANARCHY.itemType.plural.weapon'}}</label>
      {{> 'systems/anarchy/templates/common/item-control-add.hbs' itemType='weapon'}}
  </h2>
  <ul class="alternate-items">
    <li class="list-header flexrow">
      <span class="flex-shrink-start"></span>
      <span class="flex-grow-2">{{localize 'ANARCHY.itemType.singular.weapon'}}</span>
      <span class="flex-grow-2">{{localize 'ANARCHY.item.weapon.damageShort'}}</span>
      <span class="flex-shrink">{{localize 'ANARCHY.item.weapon.areaShort'}}</span>
      <span class="flex-shrink">{{localize 'ANARCHY.range.short'}}</span>
      <span class="flex-shrink">{{localize 'ANARCHY.range.medium'}}</span>
      <span class="flex-shrink">{{localize 'ANARCHY.range.long'}}</span>
      <span class="flex-shrink-end">
        {{{iconFA 'fas fa-pen hide-fontawesome'}}}
      </span>
    </li>
    {{#each items.weapon as |weapon|}}
    {{> "systems/anarchy/templates/actor/parts/weapon.hbs" weapon}}
    {{/each}}
  </ul>
</div>
