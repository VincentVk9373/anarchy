<div class="define-item-type weapon" data-item-type="weapon">
  <h2>
      <label>{{localize 'SRA.itemType.plural.weapon'}}</label>
      <a class="item-control item-add" title="{{localize 'SRA.common.add'}}"><i class="fas fa-plus-circle"></i></a>
  </h2>
  <ul class="alterne-list">
    <li class="list-header flexrow ">
      <img class="sheet-item-img" src="icons/skills/melee/unarmed-punch-fist-white.webp" data-edit="img" title="{{localize 'SRA.itemType.plural.weapon'}}"/>
      <span class="flex-grow-2">{{localize 'SRA.itemType.singular.weapon'}}</span>
      <span class="flex-grow-2">{{localize 'SRA.item.weapon.damage_short'}}</span>
      <span class="flex-shrink">{{localize 'SRA.item.weapon.area_short'}}</span>
      <span class="flex-shrink">{{localize 'SRA.range.short'}}</span>
      <span class="flex-shrink">{{localize 'SRA.range.medium'}}</span>
      <span class="flex-shrink">{{localize 'SRA.range.long'}}</span>
      <span class="flex-shrink-end"></span>
    </li>
    {{#each items.weapon as |weapon|}}
    {{> "systems/shadowrun-anarchy/templates/actor/parts/weapon.hbs" weapon}}
    {{/each}}
  </ul>
</div>
