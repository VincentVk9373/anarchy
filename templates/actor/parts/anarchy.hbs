{{#if options.ownAnarchy}}
  {{> "systems/shadowrun-anarchy/templates/common/checkbar.hbs"
    code='anarchy'
    value=options.anarchy.value
    max=options.anarchy.max
    labelkey=SRA.actor.counters.anarchy
    rowlength=10
    adjust=false
    iconChecked=(iconFA 'fas fa-star')
    iconUnchecked=(iconFA 'far fa-star')
  }}
{{else}}
  {{#if options.isGM}}
  {{> "systems/shadowrun-anarchy/templates/common/checkbar.hbs"
    code='anarchy'
    value=options.anarchy.value
    max=options.anarchy.max
    labelkey=SRA.gmManager.gmAnarchy
    rowlength=10
    adjust=false
    iconChecked=(iconFA 'fas fa-sun')
    iconUnchecked=(iconFA 'far fa-sun')
  }}
  {{/if}}
{{/if}}

