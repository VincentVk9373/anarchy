{{#if options.ownAnarchy}}
  {{> "systems/anarchy/templates/common/checkbar.hbs"
    code='anarchy'
    value=options.anarchy.value
    max=options.anarchy.max
    labelkey=ANARCHY.actor.counters.anarchy
    rowlength=10
    adjust=false
    iconChecked=(iconSrc 'icons/anarchy-point.webp' 'checkbar-img')
    iconUnchecked=(iconSrc 'icons/anarchy-point-off.webp' 'checkbar-img')
  }}
{{else}}
  {{#if options.isGM}}
  {{> "systems/anarchy/templates/common/checkbar.hbs"
    code='anarchy'
    value=options.anarchy.value
    max=options.anarchy.max
    labelkey=ANARCHY.gmManager.danger
    rowlength=10
    adjust=false
    iconChecked=(iconSrc 'icons/danger-point.webp' 'checkbar-img')
    iconUnchecked=(iconSrc 'icons/danger-point-off.webp' 'checkbar-img')
  }}
  {{/if}}
{{/if}}

