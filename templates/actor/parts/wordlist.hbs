<h3 class="define-wordlist" data-wordlist="{{listName}}">
  {{localize (concat 'ANARCHY.actor.plural.' listName)}}
  <a class="item-control click-wordlist-add" title="{{localize ANARCHY.common.add}}">
    {{{iconFA 'fas fa-plus-circle'}}}
  </a>
</h3>
{{#each values as |value index|}}
<div class="define-wordlist" data-wordlist="{{../listName}}" data-word="{{value}}" data-index="{{index}}">
  <span class="flexrow">
    <input class="change-wordlist-value" type="text" data-dtype="String" value="{{value}}"/>
    <a class="item-control click-wordlist-delete flex-shrink-end" title="{{localize ANARCHY.common.del}}">
      {{{iconFA 'fas fa-trash'}}}
    </a>
  </span>
</div>
{{/each}}
