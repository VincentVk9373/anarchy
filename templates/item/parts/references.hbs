<div>
  <hr>
  <div class="form-group">
    <label for="sourcereference">{{localize 'SRA.common.sourcereference'}} </label>
    <input class="item-field-value" type="text" data-dtype="String"
        name="data.sourcereference" value="{{data.data.sourcereference}}" 
        placeholder="{{localize 'SRA.common.sourcereferencehelp'}}"
    />
  </div>
  <hr>
  <div class="flexcol">
    <span><label>{{localize 'SRA.common.description'}}</label></span>
    <div class="form-group small-editor">
      {{editor content=data.data.description target="data.description" button=true owner=options.owner editable=options.editable}}
    </div>
  </div>

{{#if options.isGM}}
  <hr>
  <div class="flexcol">
    <span><label>{{localize 'SRA.common.gmnotes'}}</label></span>
    <div class="form-group small-editor">
      {{editor content=data.data.gmnotes target="data.gmnotes" button=true owner=options.owner editable=options.editable}}
    </div>
  </div>
{{/if}}
</div>
